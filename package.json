{
  "name": "@anima-research/chronicle",
  "version": "0.1.0",
  "description": "A branchable, time-traveling record store with causation tracking",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "chronicle",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu"
      ]
    }
  },
  "scripts": {
    "build": "napi build --platform --release --features napi-bindings",
    "build:debug": "napi build --platform --features napi-bindings",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "node test.mjs"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/anima-research/chronicle"
  }
}
